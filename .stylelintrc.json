{
  "ignoreFiles": ["**/*"],
  "overrides": [
    {
      "files": ["**/*.css"],
      "extends": ["stylelint-config-standard"],
      "rules": {
        "at-rule-no-unknown": [
          true,
          {
            "ignoreAtRules": ["tailwind", "apply", "variants", "responsive", "screen"]
          }
        ],
        "declaration-block-trailing-semicolon": null,
        "no-descending-specificity": null
      }
    },
    {
      "files": ["**/*.scss"],
      "extends": ["stylelint-config-standard-scss"],
      "rules": {
        "at-rule-no-unknown": [
          true,
          {
            "ignoreAtRules": ["tailwind", "apply", "variants", "responsive", "screen"]
          }
        ],
        "declaration-block-trailing-semicolon": null,
        "no-descending-specificity": null
      }
    }
  ],
  "rules": {}
}
